<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/otherprofile_selfintroduction_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dip"
    android:paddingRight="16dip" >

    <com.immomo.momo.android.view.HandyTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingBottom="7dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="更多介绍"
        android:textColor="@color/blue"
        android:textSize="14sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/blue"
        android:orientation="vertical" >
    </View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/devideline" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dip" >

            <com.immomo.momo.android.view.HandyTextView
                android:id="@+id/otherprofile_selfintroduction_htv_interest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="兴趣爱好"
                android:textColor="@color/font_attribute"
                android:textSize="18sp" />

            <com.immomo.momo.android.view.EmoticonsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otherprofile_selfintroduction_htv_interest_title"
                android:text="看电影、逛街、唱歌"
                android:textColor="@color/font_value"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/devideline" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dip" >

            <com.immomo.momo.android.view.HandyTextView
                android:id="@+id/otherprofile_selfintroduction_htv_hangout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="常出没的地方"
                android:textColor="@color/font_attribute"
                android:textSize="18sp" />

            <com.immomo.momo.android.view.EmoticonsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otherprofile_selfintroduction_htv_hangout_title"
                android:text="电影院、KTV"
                android:textColor="@color/font_value"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/devideline" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dip" >

            <com.immomo.momo.android.view.HandyTextView
                android:id="@+id/otherprofile_selfintroduction_htv_intro_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="个人说明"
                android:textColor="@color/font_attribute"
                android:textSize="18sp" />

            <com.immomo.momo.android.view.EmoticonsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otherprofile_selfintroduction_htv_intro_title"
                android:text="我不想和无聊的人聊天"
                android:textColor="@color/font_value"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>