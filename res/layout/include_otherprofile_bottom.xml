<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_unlogin_bar"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="4dip" >

    <LinearLayout
        android:id="@+id/otherprofile_bottom_layout_chat"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:layout_weight="1"
        android:background="@drawable/btn_bottombar"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal" 
        android:layout_marginLeft="2dip">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@drawable/btn_profile_bottom_icon_chat"
            android:scaleType="centerInside" />

        <com.immomo.momo.android.view.HandyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对话"
            android:textColor="@color/profile_bottom_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherprofile_bottom_layout_unfollow"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_weight="1"
        android:background="@drawable/btn_bottombar"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@drawable/btn_profile_bottom_icon_unfollow"
            android:scaleType="centerInside" />

        <com.immomo.momo.android.view.HandyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消关注"
            android:textColor="@color/profile_bottom_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherprofile_bottom_layout_follow"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_weight="1"
        android:background="@drawable/btn_bottombar"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@drawable/btn_profile_bottom_icon_follow"
            android:scaleType="centerInside" />

        <com.immomo.momo.android.view.HandyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:textColor="@color/profile_bottom_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherprofile_bottom_layout_report"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:layout_weight="1"
        android:layout_marginRight="2dip"
        android:background="@drawable/btn_bottombar"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@drawable/btn_profile_bottom_icon_report"
            android:scaleType="centerInside" />

        <com.immomo.momo.android.view.HandyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拉黑/举报"
            android:textColor="@color/profile_bottom_text_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>